{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "linter": {
    "rules": {
      "recommended": true,
      "complexity": {
        "useArrowFunction": "off"
      },
      "suspicious": {
        "noRedundantUseStrict": "off"
      }
    },
    "ignore": [
      "./dist/*",
      "./test/fixtures/wpt",
      "./tsconfig.json",
      "./tsconfig.base.json",
      "./tsconfig.types.json"
    ]
  }
}
